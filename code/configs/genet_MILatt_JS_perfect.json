{
    "name": "RefSeq_GeNet_MILAttention_JS_perfect",

    "arch": {
        "type": "GeNetModelMILAttention",
        "args": {
            "list_num_classes": "!data_loader.dataset.instance_dataset.rank_sizes",
            "rmax": "!data_loader.rmax",
            "!resnet_out": [1024, 128],
            "kernel_h": 3,
            "num_filters": 128,
            "!reset_weights": [false, true],
            "!bn_running_stats": [false, true],
            "!pool_hidden": [128, 256, 512, 1024],
            "!pool_n_attentions": [10, 30, 60],
            "!pool_gate": [false, true]
        }
    },
    "mapper": {
        "type": "SingleNodeDataParallel",
        "args": {
          "n_gpu": 1
        }
    },
    "data_loader": {
        "type": "RefSeqProkaryotaBagsDataLoader",
        "args": {
            "target_format": "probs",
            "genome_dir": "$(DATA_DIR)refseq_prokaryota/genomes",
            "taxonomy_dir": "$(DATA_DIR)refseq_prokaryota/taxonomy",
            "total_bags": 128,
            "bag_size": 2048,
            "!batch_size": [1, 2, 4],
            "drop_last": false,
            "fixed_dataset": false,
            "training_distribution": "lognormal",
            "validation_distribution": "lognormal",
            "shuffle": true,
            "validation_split": 8,
            "num_workers": 4,
            "accessions_file": "$(DATA_DIR)refseq_prokaryota/ncbi_id_training_filtered.txt",
            "taxids_list": null,
            "error_model": "perfect",
            "rmin": 1000,
            "rmax": 1000,
            "noise": 0.03,
            "filter_by_level": null,
            "num_to_keep": 1,
            "download": false,
            "genome_cache_size": -1
        }
    },
    "!optimizer": [
      {
        "type": "SGD_TF",
        "args":{
            "lr": 1.0,
            "momentum": 0.9,
            "nesterov": true
        }
      },
      {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
      },
      {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
      }
    ],
    "loss": {
        "type": "JSPerRank",
        "args": {}
    },
    "metrics": [
      {
        "type": "JSPerTaxGroup",
        "args": {
          "target_out_format": "probs",
          "model_out_format": "logprobs",
          "groups": "!data_loader.dataset.instance_dataset.categories"
        }
      }
    ],
    "lr_scheduler": {
      "type": "StepLR",
      "args": {
        "!step_size": [1, 2],
        "gamma": 0.98
      }
    },
    "trainer": {
        "type": "Trainer",
        "args": {},
        "extra_args": {
          "epochs": 200,

          "save_dir": "$(REMOTE_RESULTS_DIR)saved/",
          "save_period": 10,
          "keep_last": 2,
          "verbosity": 2,

          "monitor": "min val_loss",
          "early_stop": 200,

          "tensorboardX": true,
          "disable_hist": true
        }
    },
    "testing": {
      "verbosity": 2
    }
}
